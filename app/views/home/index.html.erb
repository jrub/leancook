<header>
  <h1>Leancook</h1>
</header>

<div id="wrapper">
  <div class="pure-g search">
    <div class="pure-u-1">
      <%= form_tag search_path, method: 'get', class: 'pure-form pure-g' do %>
        <div class="pure-u-1 pure-u-md-1-3">
          <h2>What do you have to eat today?</h2>
        </div>
        <div class="pure-u-1 pure-u-md-1-3">
          <%= text_field_tag :query, '', placeholder: 'Write here your ingredients', class: 'pure-input-1' %>
        </div>
        <div class="pure-u-1 pure-u-md-1-3 buttons">
          <%= button_tag 'Search', class: 'pure-input-3 pure-button pure-button-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
