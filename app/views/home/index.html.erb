<header class="site-header home-header">
  <div class="pure-g" id="home_header">
    <div class="pure-u-1">
      <h1><%= link_to 'leancook', root_path, class: 'pure-menu-heading' %></h1>
    </div><!-- .pure-u-1 -->
  </div><!-- .pure-g -->

  <div class="pure-g" id="search_header" style="display:none">
    <h2><%= link_to 'leancook', root_path, class: 'pure-menu-heading' %></h2>

    <div class="header-search-form">
      <%= form_tag search_path, method: 'get', class: 'pure-form', id: 'search_form' do %>
        <div class="text-field">
          <%= text_field_tag :query, query_value(@query), placeholder: 'Write your ingredients', class: 'pure-input' %>
        </div>
        <div class="submit-field">
          <%= button_tag 'Search', class: 'pure-input-3 pure-button pure-button-secondary' %>
        </div>
      <% end %>
    </div>
  </div><!-- .pure-g -->
</header>
<div id="content" class="site-content">
  <div class="pure-g main-content home-search">
    <div class="pure-u-1">
      <%= form_tag search_path, method: 'get', class: 'pure-form pure-g', id: 'search_form_home' do %>
        <div class="pure-u-1 pure-u-md-1-3">
          <h2>What's in your fridge?</h2>
        </div>
        <div class="home-search-form">
          <div class="text-field pure-u-1 pure-u-md-1-3">
            <%= text_field_tag :query, '', placeholder: 'Write here your ingredients', class: 'pure-input', id: 'query_home' %>
          </div>
          <div class="example-field">
            Example: potato egg oil
          </div>
          <div class="submit-field pure-u-1 pure-u-md-1-3 buttons">
            <%= button_tag 'Search recipes', class: 'pure-input-3 pure-button pure-button-primary' %>
          </div>
        </div><!-- .home-search-form -->
      <% end %>
    </div><!-- .pure-u-1 -->
  </div><!-- .pure-g.home-search -->
</div>

<footer class="pure-g site-footer">
  <nav class="footer-navigation">
    <ul>
      <li>
        <a href="/home/about">about leancook</a>
      </li>
    </ul>
  </nav>
</footer>