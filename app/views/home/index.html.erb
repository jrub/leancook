<header class="site-header home-header">
  <div class="pure-g">
    <div class="pure-u-1">
      <h1><%= link_to 'leancook', root_path, class: 'pure-menu-heading' %></h1>
    </div><!-- .pure-u-1 -->
  </div><!-- .pure-g -->
</header>

<div class="pure-g main-content home-search">
  <div class="pure-u-1">
    <%= form_tag search_path, method: 'get', class: 'pure-form pure-g' do %>
      <div class="pure-u-1 pure-u-md-1-3">
        <h2>What do you have to eat today?</h2>
      </div>
      <div class="home-search-form">
        <div class="text-field pure-u-1 pure-u-md-1-3">
          <%= text_field_tag :query, '', placeholder: 'Write here your ingredients', class: 'pure-input' %>
        </div>
        <div class="submit-field pure-u-1 pure-u-md-1-3 buttons">
          <%= button_tag 'Search', class: 'pure-input-3 pure-button pure-button-primary' %>
        </div>
      </div><!-- .home-search-form -->
    <% end %>
  </div><!-- .pure-u-1 -->
</div><!-- .pure-g.home-search -->
