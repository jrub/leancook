<div class="header">
    <div class="home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
    <div class="pure-g">
        <div class="pure-u-1-4">
            <a class="pure-menu-heading" href="">Leancook</a>
        </div>

        <div class="pure-u-3-4">
          <%= form_tag search_path, method: 'get', class: 'pure-form pure-g' do %>
            <div class="pure-u-2-3 pure-u-md-1-3">
              <%= text_field_tag :query, '', placeholder: 'Write here your ingredients', class: 'pure-input-1' %>
            </div>
            <div class="pure-u-1-3 pure-u-md-1-3">
              <%= button_tag 'Search', class: 'pure-input-3 pure-button pure-button-primary' %>
            </div>
          <% end %>
        </div>

        </div>
    </div>


</div>

<div class="pure-g">
    <% @recipes.each do |recipe| %>
    <div>
        <a href="<%=recipe.url%>">
            <img src="<%=recipe.image%>">
        </a>
        <p><%=recipe.name%></p>
    </div>
    <% end %>
</div>